########################################################

.PHONY: clean 
test:

clean:
	$(DELCMD) $(BIN)\*.out $(BIN)\*.exe $(OBJ)\*.o
#rm -fv output/*.out obj/*.o obj/*core* ./*core* 



.PRECIOUS: $(BIN)/%.o $(BIN)/%_test.o obj2/%.o obj2/%_test.o
.DEFAULT_GOAL:=all 

